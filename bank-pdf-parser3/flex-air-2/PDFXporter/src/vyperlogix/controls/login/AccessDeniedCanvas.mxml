<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var _buttonIcon:Class;
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%" horizontalAlign="left" verticalAlign="top">
		<mx:Panel id="panel_NoAccess" styleName="PanelNoAccess" width="100%" height="100%" layout="absolute" title="Access Denied">
			<mx:VBox height="100%" width="100%" verticalAlign="middle">
				<mx:Text text="Access Denied !" styleName="NoAccessText"/>
				<mx:Spacer height="30"/>
				<mx:HBox width="100%" horizontalAlign="center">
					<mx:Button label="Login" id="btn_login" icon="{this._buttonIcon}" styleName="LargeButton"/>
				</mx:HBox>
			</mx:VBox>
		</mx:Panel>
	</mx:VBox>
</mx:Canvas>
